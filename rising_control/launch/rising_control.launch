<?xml version="1.0"?>
<launch>

  <arg name="robot_id" default="$(optenv ROBOT_ID robot)"/>
  <arg name="prefix" default="$(arg robot_id)_"/>  
  <!--arg name="flipper_diameter" default="$(optenv ROBOT_flipper_DIAMETER 0.196)"/>
  <arg name="track_width" default="$(optenv ROBOT_TRACK_WIDTH 0.05)"/>
  <arg name="flipper_base" default="$(optenv ROBOT_flipper_BASE 0.450)"/--> 

  <arg name="sim" default="false"/>
  <arg name="launch_arm_control" default="false"/>
  <arg name="arm_controllers" default="robot_gen3_joint_trajectory_controller"/> <!-- controllers can be listed seprated by a blank space -->
  <arg name="launch_gripper_control" default="false"/>
  <arg name="gripper_controllers" default="gen3_lite_2f_gripper_controller"/> <!-- controllers can be listed seprated by a blank space -->
  <arg name="cmd_vel" default="robotnik_base_control/cmd_vel"/>

  <!-- Base control-->
    <rosparam file="$(find rising_control)/config/rising_control.yaml" command="load" subst_value="true"/>

  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen"
        args=" front_flipper_joint_controller
               back_flipper_joint_controller
               joint_read_state_controller
               joint_read_command_controller
               robotnik_base_control">
  </node>
    
  <!-- Arm and gripper control for simulation -->
  <group if="$(arg sim)">

    <group if="$(arg launch_arm_control)">

      <rosparam file="$(find rising_control)/config/arm_control.yaml" command="load" subst_value="true"/>
      <node name="controller_spawner_arm" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="$(arg arm_controllers)"/>

    </group>

    <group if="$(arg launch_gripper_control)">

      <rosparam file="$(find rising_control)/config/gripper_control.yaml" command="load" subst_value="true"/>
      <node name="controller_spawner_gripper" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="$(arg gripper_controllers)"/>

    </group>

  <!--node pkg="twist_mux" type="twist_mux" name="twist_mux">
    <rosparam command="load" file="$(find rising_control)/config/twist_mux.yaml" />
    <remap from="cmd_vel_out" to="$(arg cmd_vel)" />
  </node>
  <node pkg="twist_mux" type="twist_marker" name="twist_marker">
    <remap from="twist"  to="$(arg cmd_vel)"/>
    <remap from="marker" to="twist_marker"/>
  </node-->
   </group>

</launch>

